  <ItemGroup>
	  
    <PackageReference Include="System.IO.Ports" Version="8.0.0" />
	  
    <None Update="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
	  
    <None Update="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None> 
	  
