	<Target Name="SetPackageVersion" BeforeTargets="Pack">
		<PropertyGroup>
			<version>3.3.3</version> 
		</PropertyGroup>
		<Message Text="NuGetPackageVersion: $(version)" Importance="high" />
		<Message Text="NuGetPackageTags: $(tags)" Importance="high" />
	</Target>  
